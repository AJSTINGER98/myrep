    <body>

    <!-- navbar is not required in our landig page	 -->
    
    <div class="container">
        <% if(error && error.length > 0){ %>
        <!-- even when error box seems empty it is not undefined it is just an empty array hence we need to add error.length > 0 -->
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>
    
    <div id="landing-header">
 		<h1>Welcome to YelpCamp!</h1>
		<a href="/campgrounds" class="btn btn-lg btn-success"><i class="fas fa-tree"> </i> View All Campgrounds</a>
    </div>
    
